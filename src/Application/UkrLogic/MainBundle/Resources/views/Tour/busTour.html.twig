{% extends '@ApplicationUkrLogicMain/layout-main.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/applicationukrlogicmain/css/jcarousel.connected-carousels.css') }}">
{% endblock %}

{% block content %}
    <div class="content container tour">
        <div class="connected-carousels">
            <div class="stage">
                <div class="carousel carousel-stage">
                    <ul>
                        {% for img in getTourImages(tour.countries.country|last, 'countries') %}
                            <li>
                                <img src="{{ asset(img) }}" width="640" height="430">
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="navigation">
                <a href="#" class="prev prev-navigation">&lsaquo;</a>
                <a href="#" class="next next-navigation">&rsaquo;</a>

                <div class="carousel carousel-navigation">
                    <ul>
                        {% for img in getTourImages(tour.countries.country|last, 'countries') %}
                            <li>
                                <img src="{{ asset(img) }}" width="120" height="81">
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        <div class="hotel-tour-description">
            <h1>{{ tour.name }}</h1>

            <div class="hotel-tour-desc">
                <p>{{ tour.route | raw }}</p>

                <div>
                    <div class="vehicle-tour">
                        <p><i class="bus"></i></p>
                    </div>

                </div>
            </div>

            <div class="hotel-tour-info customscroll-dark">
                <p>
                    <b>Продолжительность тура:</b> {{ tour.days }} ночей<br/>
                    <b>Даты выезда:</b> {{ tour.dates }}<br/>
                    <b>Тип тура:</b> {{ tour.tour_type }}<br/>
                </p>

                <p class="nm"><b>Описание тура</b></p>

                {{ tour.description | raw}}


            </div>
            <p class="price">{{ tour.price_usd }} $</p>

            <div class="actions">
                {% if app.user %}
                    {% if inFavorite %}
                        <a class="button" href="#" style="margin-bottom: 5px; pointer-events: none; cursor: default;">В избранном</a>
                    {% else %}
                        <a class="button" href="{{ path('fave_tour', { 'type': 'bus', 'id': tour.tour_id }) }}" style="margin-bottom: 5px;">В избранное</a>
                    {% endif %}
                {% endif %}
                <a id="order" class="button" href="">Забронировать</a>
                <a id="addComment" class="button" href="">Оставить отзыв</a>
            </div>

        </div>
    </div>
    {% render controller('ApplicationUkrLogicMainBundle:Tour:comment', { 'request': app.request, 'tour_id': tour.tour_id, 'tour_type': 'bus' }) %}
{% endblock %}

{% block modal %}
    <div class="order_tour">
        <h3>Бронирование тура</h3>
        <form>
            <p class="close">x</p>
            <input type="text" name="fio" placeholder="Ф.И.О." required="required">
            <input type="text" name="phone" placeholder="Введите ваш контактный телефон" required="required">
            <input type="text" name="email" placeholder="Введите ваш e-mail" required="required">
            <p class="terms">
                <b>Кол-во человек:</b> 1-4<br />
                <b>Тип номера:</b> LUX<br />
                <b>Тип питания:</b> Шведский стол<br />
                <b>Продолжительность тура:</b> 14 дней<br />
                <b>Вылет из Харьков:</b> Харьков<br />
            </p>
            <button type="submit">Забронировать</button>
        </form>
    </div>
{% endblock %}